<Window x:Class="GUItar_HerOE.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUItar_HerOE"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>

        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="Music Name" FontSize="20" />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="↑"/>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <Button Content="←"/>
        </StackPanel>

        <StackPanel Grid.Column="3">
            <Button Content="↓"/>
        </StackPanel>
        
        <StackPanel Grid.Column="4">
            <Button Content="→"/>
        </StackPanel>
        
        <StackPanel Grid.Column="5">
            <Label Content="Points: " FontSize="15"/>
            <Button Content="Menu" FontSize="25" Click="Button_Click"/>
        </StackPanel>


    </Grid>
</Window>
