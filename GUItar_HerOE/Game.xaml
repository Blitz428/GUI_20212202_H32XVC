<Window x:Class="GUItar_HerOE.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUItar_HerOE"
        xmlns:vm="clr-namespace:GUItar_HerOE.ViewModels"
        mc:Ignorable="d"
        Title="Game" ResizeMode="NoResize" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:GameWindowViewModel></vm:GameWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>

        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="" ContentStringFormat="Music name: {0}" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="↑"/>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <Button Content="←"/>
        </StackPanel>

        <StackPanel Grid.Column="3">
            <Button Content="↓"/>
        </StackPanel>
        
        <StackPanel Grid.Column="4">
            <Button Content="→"/>
        </StackPanel>
        
        <StackPanel Grid.Column="5">
            <Label ContentStringFormat="Current level: {0}" Content="{Binding CurrentLevel}" FontSize="20" HorizontalAlignment="Center"/>
            <Label ContentStringFormat="Points: {0}" Content="{Binding Point}" FontSize="20" HorizontalAlignment="Center"/>
            <Label Padding="150"></Label>
            <Button Content="Menu" FontSize="25" Click="Button_Click"/>
        </StackPanel>


    </Grid>
</Window>
