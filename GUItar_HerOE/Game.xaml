<Window x:Class="GUItar_HerOE.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUItar_HerOE"
        xmlns:vm="clr-namespace:GUItar_HerOE.ViewModels"
        mc:Ignorable="d"
        Title="Game" ResizeMode="NoResize" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/gamebackground.png" TileMode="Tile"/>
    </Window.Background>
    <Window.DataContext>
        <vm:GameWindowViewModel></vm:GameWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60*"/>

        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label Content="" ContentStringFormat="Music name: {0}" FontSize="20" HorizontalAlignment="Center" FontFamily="Cascadia Code" Foreground="White" />
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.RowSpan="2">

        </StackPanel>
        <Button Grid.Column="1" Grid.Row="1" Content="↑" FontSize="30" FontWeight="Bold" Margin="5,5,5,5" Background="#B20DE708"  BorderBrush="#FFECF055" FontFamily="Cascadia Code"/>

        <StackPanel Grid.Column="3" Grid.RowSpan="2">

        </StackPanel>
        <Button Grid.Column="2" Grid.Row="1" Content="←" FontSize="30" FontWeight="Bold" Margin="5,5,5,5" Background="#B2FFAF02"  BorderBrush="#FFECF055" FontFamily="Cascadia Code"/>

        <StackPanel Grid.Column="4" Grid.RowSpan="2" Margin="5,5,5,5">

        </StackPanel>
        <Button Grid.Column="3" Grid.Row="1" Content="↓" FontSize="30" FontWeight="Bold" Margin="5,5,5,5" Background="#B2F4FF00"  BorderBrush="#FFECF055" FontFamily="Cascadia Code"/>

        <StackPanel Grid.Column="5" Grid.RowSpan="2">

        </StackPanel>
        <Button Grid.Column="4" Grid.Row="1" Content="→" FontSize="30" FontWeight="Bold" Margin="5,5,5,5" Background="#B2FF0000" BorderBrush="#FFECF055" FontFamily="Cascadia Code"/>

        <StackPanel Grid.Column="5" Grid.Row="0">
            <Label ContentStringFormat="Current level: {0}" Content="{Binding CurrentLevel}" FontSize="20" HorizontalAlignment="Center" FontFamily="Cascadia Code" Foreground="White"/>
            <Label ContentStringFormat="Points: {0}" Content="{Binding Point}" FontSize="20" HorizontalAlignment="Center" FontFamily="Cascadia Code" Foreground="White"/>

        </StackPanel>
        <Button Grid.Column="5" Grid.Row="2" Content="Menu" FontSize="25" Click="Button_Click" Margin="10" Background="#FFF7EC53" Foreground=" #B2CD82CA " BorderBrush="#B2CD82CA" FontFamily="Cascadia Code"/>

    </Grid>
</Window>
