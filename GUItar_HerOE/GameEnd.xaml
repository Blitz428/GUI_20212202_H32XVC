<Window x:Class="GUItar_HerOE.GameEnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUItar_HerOE"
        mc:Ignorable="d"
        Title="GameEnd" Height="222" Width="372" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <WrapPanel Orientation="Vertical" HorizontalAlignment="Stretch">
        <Label Content="Game is over!"  HorizontalContentAlignment="Center" ></Label>
        <Label x:Name="lb_point" Content="" HorizontalContentAlignment="Center" ContentStringFormat="Your point is {0}."/>
        <Label x:Name="lb_msg" Content="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  HorizontalAlignment="Center"/>
        <Button Content="OK"  HorizontalAlignment="Center"  Click="Button_Click"/>
    </WrapPanel>
</Window>
